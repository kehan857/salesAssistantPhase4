# 环境变量配置文件
# 复制此文件为 .env 并填入实际值

# 数据库配置
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://admin:your_secure_password_here@postgres:5432/sales_assistant

# Redis配置
REDIS_URL=redis://redis:6379

# 向量数据库配置
MILVUS_ADDRESS=milvus:19530

# AI模型API密钥
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# JWT密钥（用于认证）
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# 企业微信配置（可选）
WECHAT_CORP_ID=your_wechat_corp_id
WECHAT_CORP_SECRET=your_wechat_corp_secret

# CRM集成配置（可选）
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_REDIRECT_URI=http://localhost:8000/crm/callback

# 应用配置
NODE_ENV=development
PORT=8000
FRONTEND_URL=http://localhost:3000

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 文件上传配置
MAX_FILE_SIZE=10485760
UPLOAD_DIR=/app/uploads

# 邮件服务配置（用于培育计划）
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password

# 短信服务配置（可选，用于培育计划）
SMS_ACCESS_KEY=your_sms_access_key
SMS_SECRET_KEY=your_sms_secret_key
